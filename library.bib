isbn = {doi:10.1038/hdy.2014.92},
issn = {1365-2540},
journal = {Heredity},
number = {August},
pages = {1--9},
pmid = {25293873},
publisher = {Nature Publishing Group},
title = {{Rethinking phenotypic plasticity and its consequences for individuals, populations and species.}},

file = {:C$\backslash$:/Users/Justine/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Both, Visser - 2005 - The effect of climate change on the correlation between avian life-history traits.pdf:pdf},
isbn = {1365-2486},
issn = {13541013},
journal = {Global Change Biology},
keywords = {Climate change,Clutch size,Ficedula hypoleuca,Food availability,Laying date},
number = {10},
pages = {1606--1613},
title = {{The effect of climate change on the correlation between avian life-history traits}},

journal = {Ibis},
keywords = {Breeding success,North Atlantic Oscillation (NAO),Population dynamics},
number = {3},
pages = {429--439},
title = {{The challenges of conservation for declining migrants: Are reserve-based initiatives during the breeding season appropriate for the pied flycatcher ficedula hypoleuca?}},
volume = {151},
year = {2009}
}
